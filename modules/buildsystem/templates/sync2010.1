    echo 'this script should be run as <%= sched_login %>' >&2
    exit 1
fi

cd /distrib/mandriva/2010.1-mgaserv || exit 1
rsync -avH <%= build_login %>@jonund:/home/iurt/2010.1-SRPMS/ ./SRPMS

for i in i586 x86_64; do 
  mkdir -p $i
  cd $i
